@{
    ViewData["Title"] = "Analysis";
    Layout = "~/Views/Shared/Layout/_Layout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Анализ и прогнозирование</h1>
            </div>
        </div>
    </div>
</section>

<!-- Блок фильтров -->
<div class="shadow-sm p-3 mb-3 bg-body-tertiary rounded">
    <div class="row g-2 align-items-end">
        <!-- Тип анализа -->
        <div class="col-md-2 col-sm-6">
            <label for="categories" class="form-label">Тип анализа</label>
            <select id="categories" class="form-select">
                <option value="">Выберите тип...</option>
                <option value="equipment">Тех. средства (неисправности)</option>
                <option value="consumables">Расходные материалы</option>
                <option value="faults">Неисправности (общее)</option>
            </select>
        </div>

        <!-- Тип расходного материала -->
        <div class="col-md-2 col-sm-6">
            <label for="typeConsumable" class="form-label">Тип расходника</label>
            <select id="typeConsumable" class="form-select">
                <option value="">Все типы</option>
                <!-- Заполняется динамически (select2) -->
            </select>
        </div>

        <!-- Бренд -->
        <div class="col-md-2 col-sm-6">
            <label for="brand" class="form-label">Бренд</label>
            <select id="brand" class="form-select">
                <option value="">Все бренды</option>
                <!-- Заполняется динамически (select2) -->
            </select>
        </div>

        <!-- Модель -->
        <div class="col-md-2 col-sm-6">
            <label for="model" class="form-label">Модель</label>
            <select id="model" class="form-select">
                <option value="">Все модели</option>
                <!-- Заполняется динамически (select2) -->
            </select>
        </div>

        <!-- Период (Дата) -->
        <div class="col-md-2 col-sm-6">
            <label for="dateAnalysis" class="form-label">Период</label>
            <div class="input-group">
                <input type="text" class="form-control" id="dateAnalysis" placeholder="Дата/диапазон" />
                <span class="input-group-text"><i class="fa-regular fa-calendar"></i></span>
            </div>
        </div>

        <!-- Кнопки действий -->
        <div class="col-md-2 col-sm-6 d-flex justify-content-md-end justify-content-start gap-2">
            <button class="btn btn-outline-primary w-100" id="CalculateBtn">
                <i class="fa-solid fa-check"></i> Применить
            </button>
            <button class="btn btn-outline-secondary w-100" id="TrainingBtn">
                <i class="fa-solid fa-brain"></i> Обучить
            </button>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">

        <!-- Spinner (колесико загрузки) -->
        <div id="loadingSpinner" class="text-center my-3" style="display: none;">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2">Идёт расчёт/обучение, пожалуйста подождите...</p>
        </div>

        <!-- График расходных материалов -->
        <div class="row mt-4">
            <div class="col-md-6">
                <div class="card card-outline card-primary">
                    <div class="card-header">
                        <h3 class="card-title"><i class="fas fa-chart-bar"></i> Прогноз потребления расходных материалов</h3>
                    </div>
                    <div class="card-body">
                        <canvas id="consumablesBarChart"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card card-outline card-primary">
                    <div class="card-header">
                        <h3 class="card-title"><i class="fas fa-table"></i> Таблица прогноза расходных материалов</h3>
                    </div>
                    <div class="card-body">
                        <table id="consumablesForecastTable" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Месяц</th>
                                    <th>Расход (шт.)</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- динамика заполнения -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>


    </div>
</section>

@section Scripts {
    <!-- Подключаем необходимые скрипты (Chart.js, DataTables, Axios, Moment, Select2) -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/datatables.net-bs5/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/moment@2.29.1/moment.min.js"></script>

    <!-- Ваш кастомный JS -->
    <script src="~/views/analysis/index.js" asp-append-version="true"></script>
}
