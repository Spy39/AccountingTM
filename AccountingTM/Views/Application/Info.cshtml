@using AccountingTM.ViewModels.Application
@model ApplicationViewModel

@{
	ViewData["Title"] = "Application";
	Layout = "~/Views/Shared/Layout/_Layout.cshtml";
}



@section LeftNavbar {
	<ol class="breadcrumb float-sm-right m-0 bg-white">
		<li class="breadcrumb-item"><a href="#">Home</a></li>
		<li class="breadcrumb-item"><a href="#">Application</a></li>
		<li class="breadcrumb-item active">Info</li>
	</ol>
}
<section class="content-header">
	<div class="container-fluid">
		<div class="row mb-2">
			<div class="col-sm-6">
				<h1>Информация о заявке</h1>
			</div>
		</div>
	</div>
</section>

<div class="shadow-sm p-3 mb-1 bg-body-tertiary rounded">
	<div class="row">
		<div class="col-1">
			<button class="btn btn-default" type="button">Назад</button>
		</div>
		<div class="col-3">
	
		</div>
		<div class="col-4">
		</div>
		<div class="col-2">

		</div>

		<div class="col-2">
			<div class="float-sm-right">
				<button class="btn btn-default" data-bs-toggle="modal" data-bs-target="#create" type="submit">
					<i class="fa-solid fa-plus"></i>
				</button>
				<button type="button" class="btn btn-default">
					<i class="fa-solid fa-download"></i>
				</button>
				<button type="button" class="btn btn-default">
					<i class="fa-solid fa-print"></i>
				</button>
			</div>
		</div>
	</div>
</div>

<div class="container col-11">
	<div class="row">
		<div class="col-3 p-3">
			<div class="row">
				<div class="shadow-sm p-3 mb-1 bg-body-tertiary rounded">
					<div class="row">
						<div class="col-9">
							<p>Статус заявки: @Model.Status</p>
							<p>Категория: @Model.Category</p>
							<p>Приоритет: @Model.Priority</p>
							<p>Исполнитель: @Model.Executor</p>
						</div>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="shadow-sm p-3 mb-1 bg-body-tertiary rounded">
					<div class="row">
						<div class="col-9">
							<h5>Информация</h5>
							<p>Номер заявки: @Model.ApplicationNumber</p>
							<p>Дата создания: @Model.DateOfCreation</p>
							<p>Последнее обновление: @Model.DateOfChange</p>
							<p>Последний ответивший: @Model.LastReply</p>
							<p>Срок исполнения: @Model.ExpirationDate</p>
							<p></p>
						</div>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="shadow-sm p-3 mb-1 bg-body-tertiary rounded">
					<div class="row">
						<div class="col-9">
							<h5>История изменений</h5>
						</div>
				</div>
			</div>
			</div>
		</div>

		<div class="col-8 p-3">

			<div class="row">
				<div class="shadow-sm p-3 mb-1 bg-body-tertiary rounded">
					<div class="row">
						<h5>@Model.Subject</h5>
						<p>Автор: @Model.Author</p>
						<p>Помещение: @Model.Location</p>
						<p>Краткое описание: @Model.Description</p>
						<button>Добавить примечание</button>
					</div>
				</div>
			</div>
		
			<div class="row">
				<div class="shadow-sm p-3 mb-1 bg-body-tertiary rounded">
					<div class="row">
						<h5>Комментарии</h5>
						<p>Форма для сообщения:</p>
						<p>....:</p>
					</div>
				</div>
			</div>

		</div>
	</div>
</div>



@section Scripts {
	<script src="~/views/technicalEquipment/index.js"></script>
}