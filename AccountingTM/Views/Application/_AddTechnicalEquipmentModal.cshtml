@* Прикрепление к техническому средству *@
<div class="modal fade" id="AddTechnicalEquipmentModal" aria-hidden="true" aria-labelledby="exampleModalToggleLabel2" tabindex="-1">
	<div class="modal-dialog modal-xl">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Прикрепление заявки к техническому средству</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body mb-3">
				<div class="col-9">
					<!-- SEARCH FORM -->
					<form class="form-inline">
						
							<div class="input-group">
								<input type="search" class="form-control" placeholder="Поиск" aria-label="Recipient's username" aria-describedby="button-addon2">
								<button class="btn btn-outline-secondary" type="submit" id="button-addon2"><i class="fas fa-search"></i></button>
							</div>
						
					</form>
				</div>
				<table id="technicalEquipmentTable" class="table table-striped table-hover" style="width:100%">
					<thead>
						<tr>
							<th>Тип</th>
							<th>Бренд</th>
							<th>Модель</th>
							<th>Серийный номер</th>
							<th>Состояние</th>
							<th>Ответственный</th>
							<th>Местоположение</th>
							<th></th>
						</tr>
					</thead>

					<tbody>
					</tbody>
				</table>


			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
				<button id="create-btn" class="btn btn-primary">Добавить</button>
			</div>
		</div>
	</div>
</div>