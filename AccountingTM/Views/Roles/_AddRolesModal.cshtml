@* Добавление роли *@
<div class="modal fade" id="addRole" tabindex="-1" aria-labelledby="addRoleLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-light">
                <h5 class="modal-title"><i class="fa-solid fa-user-plus"></i> Добавление роли учетной записи</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <input type="hidden" id="addRoleId">

                <!-- Навигация по табам -->
                <ul class="nav nav-tabs" id="addRoleTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="add-info-tab" data-bs-toggle="tab" data-bs-target="#addInfo"
                                type="button" role="tab" aria-controls="addInfo" aria-selected="true">
                            <i class="fa-solid fa-info-circle"></i> Информация
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="add-permission-tab" data-bs-toggle="tab" data-bs-target="#addPermission"
                                type="button" role="tab" aria-controls="addPermission" aria-selected="false">
                            <i class="fa-solid fa-user-lock"></i> Права
                        </button>
                    </li>
                </ul>

                <!-- Контент табов -->
                <div class="tab-content p-3" id="addRoleTabContent">
                    <!-- Вкладка информации -->
                    <div class="tab-pane fade show active" id="addInfo" role="tabpanel" aria-labelledby="add-info-tab">
                        <div class="mb-3">
                            <label for="roleName" class="form-label">Наименование роли</label>
                            <input type="text" class="form-control" id="roleName" placeholder="Введите название роли">
                        </div>
                    </div>

                    <!-- Вкладка прав -->
                    <div class="tab-pane fade" id="addPermission" role="tabpanel" aria-labelledby="add-permission-tab">
                        <div id="addPermissionTree"></div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                    <i class="fa-solid fa-xmark"></i> Закрыть
                </button>
                <button id="addRoleBtn" class="btn btn-primary">
                    <i class="fa-solid fa-plus"></i> Добавить
                </button>
            </div>
        </div>
    </div>
</div>
