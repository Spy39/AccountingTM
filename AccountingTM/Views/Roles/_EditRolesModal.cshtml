@* Изменение роли *@
<div class="modal fade" id="editRole" tabindex="-1" aria-labelledby="editRoleLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-light">
                <h5 class="modal-title"><i class="fa-solid fa-user-shield"></i> Изменение роли учетной записи</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <input type="hidden" id="editRoleId">

                <!-- Навигация по табам -->
                <ul class="nav nav-tabs" id="roleTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="edit-info-tab" data-bs-toggle="tab" data-bs-target="#editInfo"
                                type="button" role="tab" aria-controls="editInfo" aria-selected="true">
                            <i class="fa-solid fa-info-circle"></i> Информация
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="edit-permission-tab" data-bs-toggle="tab" data-bs-target="#editPermission"
                                type="button" role="tab" aria-controls="editPermission" aria-selected="false">
                            <i class="fa-solid fa-user-lock"></i> Права
                        </button>
                    </li>
                </ul>

                <!-- Контент табов -->
                <div class="tab-content p-3" id="roleTabContent">
                    <!-- Вкладка информации -->
                    <div class="tab-pane fade show active" id="editInfo" role="tabpanel" aria-labelledby="edit-info-tab">
                        <div class="mb-3">
                            <label for="editNameRole" class="form-label">Наименование роли</label>
                            <input type="text" class="form-control" id="editNameRole" placeholder="Введите название роли">
                        </div>
                    </div>

                    <!-- Вкладка прав -->
                    <div class="tab-pane fade" id="editPermission" role="tabpanel" aria-labelledby="edit-permission-tab">
                        <div id="editPermissionTree"></div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                    <i class="fa-solid fa-xmark"></i> Закрыть
                </button>
                <button id="editRoleBtn" class="btn btn-primary">
                    <i class="fa-solid fa-save"></i> Сохранить
                </button>
            </div>
        </div>
    </div>
</div>
