@{
	ViewData["Title"] = "UserPage";
	Layout = "~/Views/Shared/Layout/_Layout.cshtml";
}

@section LeftNavbar {
	<ol class="breadcrumb float-sm-right m-0 bg-white">
		<li class="breadcrumb-item"><a asp-area="" asp-controller="TechnicalEquipment" asp-action="Index">Home</a></li>
		<li class="breadcrumb-item active">User page</li>
	</ol>
}

<div class="container col-md-6 mb-4">
    <!-- Заголовок страницы -->
    <div class="row mb-3">
        <div class="col text-center">
            <h3 class="fw-bold">Персональная страница</h3>
        </div>
    </div>

    <!-- Карточка информации пользователя -->
    <div class="shadow-sm p-4 mb-4 bg-body-tertiary rounded">
        <!-- Форма с полями информации -->
        <form>
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="userFullName" value="Иванов Иван Иванович" readonly>
                <label for="userFullName"><i class="fa-solid fa-user me-2"></i>Фамилия, имя, отчество</label>
            </div>

            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="userLogin" value="ivanov_ii" readonly>
                <label for="userLogin"><i class="fa-solid fa-user-lock me-2"></i>Логин</label>
            </div>

            <div class="form-floating mb-3">
                <input type="password" class="form-control" id="userPassword" value="********" readonly>
                <label for="userPassword"><i class="fa-solid fa-key me-2"></i>Пароль</label>
            </div>

            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="userPosition" value="Инженер отдела контроля" readonly>
                <label for="userPosition"><i class="fa-solid fa-briefcase me-2"></i>Должность</label>
            </div>

            <div class="form-floating mb-4">
                <input type="text" class="form-control" id="userRights" value="Администратор" readonly>
                <label for="userRights"><i class="fa-solid fa-user-shield me-2"></i>Права доступа</label>
            </div>

            <!-- Кнопки действий -->
            <div class="d-flex justify-content-end gap-2">
                <!-- Кнопка редактировать -->
                <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#editUserPage">
                    <i class="fa-solid fa-pen me-1"></i>Изменить
                </button>
                <!-- Кнопка сброса пароля -->
                <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#resetPasswordModal">
                    <i class="fa-solid fa-rotate me-1"></i>Сбросить пароль
                </button>
            </div>
        </form>
    </div>
</div>

@await Html.PartialAsync("_EditUserPageModal.cshtml")
@await Html.PartialAsync("_ResetPasswordModal.cshtml")
                