@using AccountingTM.ViewModels.Account;
@using AccountingTM.Views.Shared.Components.Input;
@model LoginViewModel

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <title>Авторизация</title>
</head>
<body>
    <div class="card">
        <form asp-action="Login" asp-controller="Account" method="post" class="form login">
            <div class="card__header">
                <h2 class="card__title">Авторизация</h2>
            </div>
            <div class="card__body">
                <div class="input">
                    <label class="input__label" asp-for="Login"></label>
                    <div class="input__content">
                        <input type="text" asp-for="Login"/>
                    </div>
                </div>
                <div class="input">
                    <label class="input__label" asp-for="Password"></label>
                    <div class="input__content">
                        <input type="password" asp-for="Password" />
                    </div>
                </div>
            </div>
            <div class="card__footer">
                <button class="btn btn-primary" style="width:100%">Войти</button>
            </div>
        </form>
    </div>
</body>
</html>
