@using AccountingTM.ViewModels.Account;
@using AccountingTM.Views.Shared.Components.Input;
@model LoginViewModel

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <title>Авторизация</title>
    @await Html.PartialAsync("~/Views/Shared/Layout/_Styles.cshtml")
</head>
<body>
    <div class="container d-flex justify-content-center pt-5">
        <div class="card card-info">
            <div class="login-box">
                <div class="login-logo">
                    <a href="../../index2.html"><b><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">AccountingTM</font></font></b><font style="vertical-align: inherit;"></font></a>
                </div>
                <form asp-action="Login" asp-controller="Account" method="post" class="form-horizontal">
                    <div class="card">
                        <div class="card-body login-card-body">
                            <p class="login-box-msg"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Войдите, чтобы начать работу</font></font></p>
                            <form action="../../index3.html" method="post">
                                <div class="input-group mb-3">
                                    <input type="text" asp-for="Login" class="form-control" placeholder="Логин">
                                    <div class="input-group-append">
                                        <div class="input-group-text">
                                            <span class="fa-solid fa-circle-user"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="input-group mb-3">
                                    <input type="password" asp-for="Password" class="form-control" placeholder="Пароль">
                                    <div class="input-group-append">
                                        <div class="input-group-text">
                                            <span class="fas fa-lock"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-8">
                                        <div class="icheck-primary">
                                            <input type="checkbox" id="remember">
                                            <label for="remember">
                                                <font style="vertical-align: inherit;">
                                                    <font style="vertical-align: inherit;">
                                                        Запомнить меня
                                                    </font>
                                                </font>
                                            </label>
                                        </div>
                                    </div>

                                    <div class="col-4">
                                        <button type="submit" class="btn btn-primary btn-block"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Войти</font></font></button>
                                    </div>

                                </div>
                            </form>

                            <p class="mb-1">
                                <a href="forgot-password.html"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Я забыл свой пароль</font></font></a>
                            </p>
                        </div>
                </form>
            </div>
        </div>

        </div>
    </div>



    @await Html.PartialAsync("~/Views/Shared/Layout/_Scripts.cshtml")

</body>
</html>


