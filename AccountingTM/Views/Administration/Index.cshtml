@{
    ViewData["Title"] = "Administration";
    Layout = "~/Views/Shared/Layout/_Layout.cshtml";
}

@section LeftNavbar {
	<ol class="breadcrumb float-sm-right m-0 bg-white">
		<li class="breadcrumb-item"><a href="#">Home</a></li>
		<li class="breadcrumb-item active">Administration</li>
	</ol>
}
<section class="content-header">
	<div class="container-fluid">
		<div class="row mb-2">
			<div class="col-sm-6">
				<h1>Администрирование</h1>
			</div>
		</div>
	</div>
</section>

<div class="shadow-sm p-3 mb-1 bg-body-tertiary rounded">
	<div class="row">
		<div class="col-6">
			<!-- SEARCH FORM -->
			<form class="form-inline">
				<div class="input-group input-group-sm">
					@*<input class="form-control form-control-navbar" type="search" placeholder="Search" aria-label="Search">*@
					<input type="search" class="form-control form-control-sm" placeholder="Поиск" aria-controls="example1">
					<div class="input-group-append">
						<button class="btn btn-navbar" type="submit">
							<i class="fas fa-search"></i>
						</button>
					</div>
				</div>
			</form>
		</div>

		<div class="col-6">
			<div class="float-sm-right">
				<button class="btn btn-default" data-bs-toggle="modal" data-bs-target="#add" type="submit">
					<i class="fa-solid fa-plus"></i>
				</button>
				<button type="button" class="btn btn-default">
					<i class="fa-solid fa-download"></i>
				</button>
				<button type="button" class="btn btn-default">
					<i class="fa-solid fa-print"></i>
				</button>
			</div>
		</div>
	</div>
</div>
