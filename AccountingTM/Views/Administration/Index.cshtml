@{
    ViewData["Title"] = "Administration";
    Layout = "~/Views/Shared/Layout/_Layout.cshtml";
}

@section LeftNavbar {
	<ol class="breadcrumb float-sm-right m-0 bg-white">
		<li class="breadcrumb-item"><a href="#">Home</a></li>
		<li class="breadcrumb-item active">Administration</li>
	</ol>
}
<section class="content-header">
	<div class="container-fluid">
		<div class="row mb-2">
			<div class="col-sm-6">
				<h1>Администрирование</h1>
			</div>
		</div>
	</div>
</section>

<div class="row">

	<div class="shadow-sm p-3 mb-1 bg-body-tertiary rounded col-8">
		<div class="row">
			<div class="col-8">
				<h5>Пользователи</h5>
			</div>
			<div class="col-1">
				<div class="float-sm-right">
					<button class="btn btn-default mb-1" data-bs-toggle="modal" data-bs-target="#createEmployee" type="submit">
						<i class="fa-solid fa-plus"></i>
					</button>
				</div>
			</div>
			<div class="col-3">
				<div class="input-group mb-3">
					<input type="search" class="form-control" placeholder="Поиск" aria-label="Recipient's username" aria-describedby="button-addon2">
					<button class="btn btn-outline-secondary" type="submit" id="button-addon2"><i class="fas fa-search"></i></button>
				</div>
			</div>
		</div>
		<div class="row">
			<table id="reciepts" class="table table-bordered align-middle table-hover table-striped" style="width:100%">
				<thead class="table">
					<tr>
						<td>Фамилия, имя, отчество</td>
						<td>Логин</td>
						<td>Пароль</td>
						<td>Права</td>
						<td></td>
					</tr>
				</thead>
				<tbody>
				</tbody>
			</table>
		</div>
	</div>

	<div class="shadow-sm p-3 mb-1 bg-body-tertiary rounded col-4">
		<div class="row">
			<div class="col-11 mb-3">
				<h5>Права пользователей</h5>
			</div>
			<div class="col-1">
				<div class="float-sm-right">
					<button class="btn btn-default mb-3" data-bs-toggle="modal" data-bs-target="#createEmployee" type="submit">
						<i class="fa-solid fa-plus"></i>
					</button>
				</div>
			</div>
		</div>
		<div class="row">
			<table id="reciepts" class="table table-bordered align-middle table-hover table-striped" style="width:100%">
				<thead class="table">
					<tr>
						<td>Наименование</td>
						<td></td>
					</tr>
				</thead>
				<tbody>
				</tbody>
			</table>
		</div>
	</div>

</div>

