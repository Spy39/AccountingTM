<div class="shadow-sm p-3 mb-1 bg-body-tertiary rounded">
	<div class="row">
		<div class="col-8">
			<h5>Показатель</h5>
		</div>
		<div class="col-1">
			<div class="float-sm-right">
				<button class="btn btn-default mb-1" data-bs-toggle="modal" data-bs-target="#createIndicator" type="submit">
					<i class="fa-solid fa-plus"></i>
				</button>
			</div>
		</div>
		<div class="col-3">
			<div class="input-group mb-3">
				<input type="search" id="search-input-indicator" class="form-control" placeholder="Поиск" aria-label="Recipient's username" aria-describedby="button-addon2">
				<button class="btn btn-outline-secondary" type="submit" id="button-search-indicator"><i class="fas fa-search"></i></button>
			</div>
		</div>
	</div>
	<div class="row">
		<table id="indicators" class="table table-bordered align-middle table-hover table-striped" style="width:100%">
			<thead class="table">
				<tr>
					<td>Наименование</td>
					<td></td>
				</tr>
			</thead>
			<tbody>
			</tbody>
		</table>
	</div>
</div>

<div class="modal fade" tabindex="-1" id="createIndicator">
	<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Добавление показателя характеристики технического средства</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">

				<div class="form-floating  mb-2">
					<input type="text"
						   class="form-control"
						   id="indicator"
						   name="indicator"
						   placeholder="Наименование показателя" />
					<label for="floatingInput">Наименование показателя</label>
				</div>

			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
				<button id="createIndicatorBtn" class="btn btn-primary">Добавить</button>
			</div>
		</div>
	</div>
</div>

<div class="modal fade" tabindex="-1" id="editIndicator">
	<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Изменение показателя характеристики технического средства</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<input id="editIndicatorId" class="d-none" hidden />

				<div class="form-floating  mb-2">
					<input type="text"
						   class="form-control"
						   id="editNameIndicator"
						   name="indicator"
						   placeholder="Наименование показателя" />
					<label for="floatingInput">Наименование показателя</label>
				</div>

			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
				<button id="editIndicatorBtn" class="btn btn-primary">Сохранить</button>
			</div>
		</div>
	</div>
</div>