<div class="shadow-sm p-3 mb-1 bg-body-tertiary rounded">
	<div class="row">
		<div class="col-8">
			<h5>Тип технического средства</h5>
		</div>

		<div class="col-1">
			<div class="float-sm-right">
				<button class="btn btn-default mb-1" data-bs-toggle="modal" data-bs-target="#createType" type="submit">
					<i class="fa-solid fa-plus"></i>
				</button>
			</div>
		</div>
		<div class="col-3">
			<div class="input-group mb-3">
				<input type="search" id="search-input-typeEquipment" class="form-control" placeholder="Поиск" aria-label="Recipient's username" aria-describedby="button-addon2">
				<button class="btn btn-outline-secondary" type="submit" id="button-search-typeEquipment"><i class="fas fa-search"></i></button>
			</div>
		</div>

	</div>

	<div class="row">
		<table id="types" class="table table-bordered align-middle table-hover table-striped" style="width:100%">
			<thead class="table">
				<tr>
					<td>Наименование</td>
					<td></td>
				</tr>
			</thead>
			<tbody>

			</tbody>
		</table>
	</div>

</div>


<div class="modal fade" tabindex="-1" id="createType">
	<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Добавление типа технического средства</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">

				<div class="form-floating  mb-2">
					<input type="text"
						   class="form-control"
						   id="typeEquipment"
						   placeholder="Наименование типа технического средства" />
					<label for="floatingInput">Наименование типа технического средства</label>
				</div>

			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
				<button id="createTypeEquipmentBtn" class="btn btn-primary">Добавить</button>
			</div>
		</div>
	</div>
</div>

<div class="modal fade" tabindex="-1" id="editTypeEquipment">
	<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Изменение типа технического средства</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<input id="editTypeEquipmentId" class="d-none" hidden />

				<div class="form-floating  mb-2">
					<input type="text"
						   class="form-control"
						   id="editNameTypeEquipment"
						   placeholder="Наименование типа технического средства" />
					<label for="floatingInput">Наименование типа технического средства</label>
				</div>

			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
				<button id="editTypeEquipmentBtn" class="btn btn-primary">Сохранить</button>
			</div>
		</div>
	</div>
</div>
