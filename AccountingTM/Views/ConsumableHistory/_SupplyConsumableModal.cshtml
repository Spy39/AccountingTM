@* Поставка расходного материала *@
<div class="modal fade" tabindex="-1" id="SupplyConsumableModal">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title"><i class="fa-solid fa-plus me-2"></i> Поставка расходного материала</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<div class="mb-3">
					<label class="form-label">Количество</label>
					<input type="number" class="form-control" id="quantitySupply" name="quantity" placeholder="Введите количество">
				</div>

				<div class="mb-3">
					<label class="form-label">Комментарий</label>
					<textarea class="form-control" id="commentSupply" name="comment" placeholder="Добавьте комментарий"></textarea>
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
				<button id="supplyBtn" class="btn btn-success"><i class="fa-solid fa-plus"></i> Добавить</button>
			</div>
		</div>
	</div>
</div>