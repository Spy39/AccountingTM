@{
	ViewData["Title"] = "Consumable";
	Layout = "~/Views/Shared/Layout/_Layout.cshtml";
}


@section LeftNavbar {
	<ol class="breadcrumb float-sm-right m-0 bg-white">
		<li class="breadcrumb-item"><a asp-area="" asp-controller="TechnicalEquipment" asp-action="Index">Home</a></li>
		<li class="breadcrumb-item active">Consumable</li>
	</ol>
}
<section class="content-header">
	<div class="container-fluid">
		<div class="row mb-2">
			<div class="col-sm-6">
				<h1>Расходные материалы</h1>
			</div>
		</div>
	</div>
</section>

<div class="shadow-sm p-3 mb-1 bg-body-tertiary rounded">
	<div class="row">
		<div class="col-9">
			<!-- SEARCH FORM -->
				<div class="col-3">
					<div class="input-group">
						<input id="search-input" type="search" class="form-control" placeholder="Поиск" aria-label="Recipient's username" aria-describedby="button-addon2">
						<button class="btn btn-outline-secondary" type="submit" id="searchConsumableBtn"><i class="fas fa-search"></i></button>
					</div>
				</div>
		</div>

		<div class="col-3">
			<div class="float-sm-right">

				<button class="btn btn-default" data-bs-toggle="modal" data-bs-target="#create">Добавить</button>

				<div class="btn-group" role="group">
					<button id="btnGroupDrop1" type="button" class="btn btn-default dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
						Фильтр
					</button>
					<ul class="dropdown-menu" aria-labelledby="btnGroupDrop1">
						<li><a class="dropdown-item" href="#">В наличии</a></li>
						<li><a class="dropdown-item" href="#">Нет в наличии</a></li>
					</ul>
				</div>

			</div>
		</div>
	</div>
</div>

<table id="consumableTable" class="table table-striped table-hover" style="width:100%">
	<thead>
		<tr>
			<th>Тип</th>
			<th>Бренд</th>
			<th>Модель</th>
			<th>Местоположение</th>
			<th>Количество</th>
			<th>Ед. изм.</th>
			<th>Статус</th>
			<th>Последнее пополнение</th>
			<th></th>
		</tr>
	</thead>

	<tbody>
	</tbody>
</table>

@await Html.PartialAsync("_AddConsumableModal.cshtml")

@section Scripts {
	<script src="~/views/consumable/index.js"></script>
}