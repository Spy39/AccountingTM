@{
	ViewData["Title"] = "Set";
	Layout = "~/Views/Shared/Layout/_Layout.cshtml";
}

@section LeftNavbar {
	<ol class="breadcrumb float-sm-right m-0 bg-white">
		<li class="breadcrumb-item"><a asp-area="" asp-controller="TechnicalEquipment" asp-action="Index">Home</a></li>
		<li class="breadcrumb-item active">TechnicalEquipment</li>
	</ol>
}
<section class="content-header">
	<div class="container-fluid">
		<div class="row mb-2">
			<div class="col-sm-6">
				<h1>Комплекты</h1>
			</div>
		</div>
	</div>
</section>

<div class="shadow-sm p-3 mb-1 bg-body-tertiary rounded">
	<div class="row">
		<div class="col-6">
			<!-- SEARCH FORM -->
			<form class="form-inline">
				<div class="input-group">
					<input type="search" class="form-control" placeholder="Поиск" aria-label="Recipient's username" aria-describedby="button-addon2">
					<button class="btn btn-outline-secondary" type="submit" id="button-addon2"><i class="fas fa-search"></i></button>
				</div>
			</form>
		</div>

		<div class="dropdown col-3">


		</div>
		<div class="col-3">
			<div class="float-sm-right">
				
				<button class="btn btn-default" data-bs-toggle="modal" data-bs-target="#FilterModal">Фильтр</button>
			</div>
		</div>
	</div>
</div>


<div class="container-fluid">
	<div class="row">
		<div class="col-3">
			<div class="row">
				<div class="shadow-sm p-3 mb-1 bg-body-tertiary rounded">
					<div class="row">

						<div class="col-12">

							<div class ="col-3">
                                <h5>Комплекты</h5>
							</div>

							<div class ="col-9">
								<button class="btn btn-default" data-bs-toggle="modal" data-bs-target="#CreateSetModal">Новый комплект</button>
							</div>

						</div>

					</div>

					<div class="row">
						<table id="setTable" class="table table-bordered align-middle table-hover" style="width:100%">
							<thead class="table">
								<tr>
									<td>Название</td>
									<td></td>
								</tr>
							</thead>
							<tbody>
							</tbody>
						</table>
					</div>
				</div>		
			</div>
		</div>

		<div class="col-9" id="page-content">
			<div class="shadow-sm p-3 mb-1 bg-body-tertiary rounded">
				<div class="row mb-2">
					<div class="col-9">
						<h5>Состав комплекта</h5>
					</div>
					<div class="col-3">
						<div class="float-sm-right">
							<button class="btn btn-default" data-bs-toggle="modal" data-bs-target="#AddInSetModal">Добавить в комплект</button>
						</div>
					</div>
				</div>
				<div class="row">
					<table id="compoundSetTable" class="table table-striped table-hover" style="width:100%">
						<thead>
							<tr>
								<th>Тип</th>
								<th>Бренд</th>
								<th>Модель</th>
								<th>Серийный номер</th>
								<th>Состояние</th>
								<th>Местоположение</th>
								<th></th>
							</tr>
						</thead>

						<tbody>
						</tbody>
					</table>
				</div>
			</div>
		</div>

	</div>
</div>

@await Html.PartialAsync("_AddInSetModal.cshtml")
@await Html.PartialAsync("_CreateSetModal.cshtml")

@section Scripts {
	<script src="~/views/set/index.js"></script>
}