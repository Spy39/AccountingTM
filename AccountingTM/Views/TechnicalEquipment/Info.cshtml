@using AccountingTM.ViewModels.TechnicalEquipment
@model InfoViewModel

@{
    ViewData["Title"] = "TechnicalEquipmentInfo";
    Layout = "~/Views/Shared/Layout/_Layout.cshtml";
}

@section LeftNavbar {
	<ol class="breadcrumb float-sm-right m-0 bg-white">
		<li class="breadcrumb-item"><a asp-area="" asp-controller="TechnicalEquipment" asp-action="Index">Home</a></li>
		<li class="breadcrumb-item"><a asp-area="" asp-controller="TechnicalEquipment" asp-action="Index">TechnicalEquipment</a></li>
		<li class="breadcrumb-item active">Info</li>
	</ol>
}
<section class="content-header">
	<div class="container-fluid">
		<div class="row mb-2">
			<div class="col-sm-6">
				<h1>Инфо о ТС</h1>
				<input type="text" id="technicalEquipmentId" value="@(Model.TechnicalId)" hidden>
			</div>
		</div>
	</div>
</section>

<div class="shadow-sm p-3 mb-1 bg-body-tertiary rounded">
	<div class="row">
		<div class="col-1">
			<a class="btn btn-default" asp-area="" asp-controller="TechnicalEquipment" asp-action="Index">Назад</a>
		</div>
		<div class="col-7">
			<div class="row">
                <h3>@Model.TypeEquipment @Model.Brand @Model.Model</h3>
			</div>
		</div>
		<div class="col-2">
			<div class="row">
				Статус: @Model.Status
			</div>
			<div class="row">
				Изменено:
			</div>
		</div>

		<div class="col-2">
			<div class="float-sm-right">
				<button class="btn btn-default" data-bs-toggle="modal" data-bs-target="#editBasicModal" type="submit">
					<i class="fa-solid fa-pen"></i>
				</button>
				<button type="button" class="btn btn-default">
					<i class="fa-solid fa-download"></i>
				</button>
				<button type="button" class="btn btn-default">
					<i class="fa-solid fa-print"></i>
				</button>
			</div>
		</div>
	</div>
</div>


<div class="container col-12">
	<div class="row">
		<div class="col-3 p-3">
			<div class="row btn-light">
				<h4>Основная информация</h4>
				<img src="~/img/technical-support.png" class="img-fluid" alt="...">
			</div>
			<form class="form-floating mb-2">
				<input type="text" class="form-control" id="floatingInputValue" value="@(Model.SerialNumber ?? string.Empty)" readonly>
				<label for="floatingInputValue">Серийный номер</label>
			</form>
			<form class="form-floating mb-2">
				<input type="text" class="form-control" id="floatingInputValue" value="@Model.InventoryNumber" readonly>
				<label for="floatingInputValue">Инвентарный номер</label>
			</form>
			<form class="form-floating mb-2">
				<input type="text" class="form-control" id="floatingInputValue" value="@(Model.Employee?.FullName ?? string.Empty)" readonly>
				<label for="floatingInputValue">Ответственный</label>
			</form>
			<form class="form-floating mb-2">
				<input type="text" class="form-control" id="floatingInputValue" value="@Model.Location.Name" readonly>
				<label for="floatingInputValue">Местоположение</label>
			</form>
			<form class="form-floating mb-2">
				<input type="text" class="form-control" id="floatingInputValue" value="@(Model.Date?.ToString("dd.MM.yyyy") ?? string.Empty)" readonly>
				<label for="floatingInputValue">Дата изготовления</label>
			</form>
			<form class="form-floating mb-2">
				<input type="text" class="form-control" id="floatingInputValue" value="@(Model.DateStart?.ToString("dd.MM.yyyy") ?? string.Empty)" readonly>
				<label for="floatingInputValue">Ввод в эксплуатацию</label>
			</form>
			<form class="form-floating mb-2">
				<input type="text" class="form-control" id="floatingInputValue" value="@(Model.DateEnd?.ToString("dd.MM.yyyy") ?? string.Empty)" readonly>
				<label for="floatingInputValue">Средний срок работы</label>
			</form>
			<form class="form-floating mb-2">
				<input type="text" class="form-control" id="floatingInputValue" value="@(Model.DateGarant?.ToString("dd.MM.yyyy") ?? string.Empty)" readonly>
				<label for="floatingInputValue">Гарантийный срок работы</label>
			</form>
			<div class="d-grid gap-2 d-md-flex justify-content-md-end mb-2">
				<button class="btn btn-default" data-bs-toggle="modal" data-bs-target="#editAdditionalModal" type="submit">Изменить</button>
			</div>

			<div class="row">
				<div class="shadow-sm p-3 mb-1 bg-body-tertiary rounded">
					<div class="row">
						<div class="col-8">
							<h5>Описание</h5>
						</div>
						<div class="col-4">
							<div class="float-sm-right">
								<button class="btn btn-default" data-bs-toggle="modal" data-bs-target="#editDescriptionModal" type="submit">
									<i class="fa-solid fa-pen"></i>
								</button>
								<button class="btn btn-default" data-bs-toggle="modal" data-bs-target="#addDescriptionModal" type="submit">
									<i class="fa-solid fa-plus"></i>
								</button>
							</div>
						</div>
					</div>
					<div class="row">
						ввв
					</div>
				</div>
			</div>
		</div>


		<div class="col-9 p-3">
			<div class="row">
				<div class="shadow-sm p-3 mb-1 bg-body-tertiary rounded">
					<div class="row">
						<div class="col-9">
							<h5>Учёт выполненных работ</h5>
						</div>
						<div class="col-3">
							<div class="float-sm-right">
								<button class="btn btn-default mb-1" data-bs-toggle="modal" data-bs-target="#addCompletedWorkModal" type="submit">
									<i class="fa-solid fa-plus"></i>
								</button>
							</div>
						</div>
					</div>
					<div class="row">
						<table id="completedWorkTable" class="table table-bordered align-middle table-hover" style="width:100%">
							<thead class="table">
								<tr>
									<td>Дата</td>
									<td>Номер заявки</td>
									<td>Наименование</td>
									<td>Фамилия выполнившего работу</td>
									<td>Статус</td>
									<td></td>
								</tr>
							</thead>
							<tbody>
							</tbody>
						</table>
					</div>
				</div>
			</div>

			<div class="row">
				<div class="shadow-sm p-3 mb-1 bg-body-tertiary rounded">
				<div class="row">
					<div class="col-9">
						<h5>Прием и передача изделия</h5>
					</div>
					<div class="col-3">
						<div class="float-sm-right">
								<button class="btn btn-default mb-1" data-bs-toggle="modal" data-bs-target="#addReceptionAndTransmissionModal" type="submit">
								<i class="fa-solid fa-plus"></i>
							</button>
						</div>
					</div>
				</div>
					<div class="row">
						<table id="receptionAndTransmissionTable" class="table table-bordered align-middle table-hover" style="width:100%">
							<thead class="table">
                                <tr>
                                    <td>Дата</td>
                                    <td>Состояние изделия</td>
                                    <td>Основание (наименование, номер и дата документа)</td>
                                    <td>Предприятие и ФИО сдавшего</td>
                                    <td>Предприятие и ФИО принявшего</td>
                                    <td>Примечание</td>
                                    <td></td>
                                </tr>
                            </thead>
                            <tbody>

                            </tbody>
                        </table>
					</div>
				</div>
			</div>

			<div class="row">
				<div class="shadow-sm p-3 mb-1 bg-body-tertiary rounded">
					<div class="row">
						<div class="col-9">
							<h5>Ремонт</h5>
						</div>
						<div class="col-3">
							<div class="float-sm-right">
								<button class="btn btn-default mb-1" data-bs-toggle="modal" data-bs-target="#addRepairModal" type="submit">
									<i class="fa-solid fa-plus"></i>
								</button>
							</div>
						</div>
					</div>
					<div class="row">
						<table id="repairTable" class="table table-bordered align-middle table-hover" style="width:100%">
							<thead class="table">
								<tr>
									<td>Дата</td>
									<td>Предприятие</td>
									<td>Причина поступления в ремонт</td>
									<td>Сведения о производственном ремонте</td>
									<td></td>
								</tr>
							</thead>
							<tbody>
							</tbody>
						</table>
					</div>
				</div>
			</div>

			<div class="row">
				<div class="shadow-sm p-3 mb-1 bg-body-tertiary rounded">
					<div class="row">
						<div class="col-9">
							<h5>Хранение</h5>
						</div>
						<div class="col-3">
							<div class="float-sm-right">
								<button class="btn btn-default mb-1" data-bs-toggle="modal" data-bs-target="#addStorageModal" type="submit">
									<i class="fa-solid fa-plus"></i>
								</button>
							</div>
						</div>
					</div>
					<div class="row">
						<table id="storageTable" class="table table-bordered align-middle table-hover" style="width:100%">
							<thead class="table">
                                <tr>
                                    <td>Дата приемки на хранение</td>
                                    <td>Дата снятия с хранения</td>
                                    <td>Условия хранения</td>
                                    <td>Вид хранения</td>
                                    <td>Примечание</td>
                                    <td></td>
                                </tr>
							</thead>
							<tbody>
							</tbody>
						</table>
					</div>
				</div>
			</div>

			<div class="row">
				<div class="shadow-sm p-3 mb-1 bg-body-tertiary rounded">
					<div class="row">
						<div class="col-9">
							<h5>Консервация</h5>
						</div>
						<div class="col-3">
							<div class="float-sm-right">
								<button class="btn btn-default mb-1" data-bs-toggle="modal" data-bs-target="#addConservationModal" type="submit">
									<i class="fa-solid fa-plus"></i>
								</button>
							</div>
						</div>
					</div>
					<div class="row">
						<table id="conservationTable" class="table table-bordered align-middle table-hover" style="width:100%">
							<thead class="table">
								<tr>
									<td>Дата</td>
									<td>Наименование работ</td>
									<td>Срок действия</td>
									<td>Фамилия и инициалы</td>
									<td></td>
								</tr>
							</thead>
							<tbody>
							</tbody>
						</table>
					</div>
				</div>
			</div>

			<div class="row">
				<div class="shadow-sm p-3 mb-1 bg-body-tertiary rounded">
					<div class="row">
						<div class="col-9">
							<h5>Сведения об утилизации</h5>
						</div>
						<div class="col-3">
							<div class="float-sm-right">
								<button class="btn btn-default mb-1" data-bs-toggle="modal" data-bs-target="#addDisposalInformationModal" type="submit">
									<i class="fa-solid fa-plus"></i>
								</button>
							</div>
						</div>
					</div>
					<div class="row">
						<table id="disposalInformationTable" class="table table-bordered align-middle table-hover" style="width:100%">
							<thead class="table">
								<tr>
									<td>Дата</td>
									<td>Описание</td>
									<td>Примечание</td>
									<td></td>
								</tr>
							</thead>
							<tbody>

							</tbody>
						</table>
					</div>
				</div>
			</div>

			<div class="row">
				<div class="shadow-sm p-3 mb-1 bg-body-tertiary rounded">
					<div class="row">
						<div class="col-9">
							<h5>Характеристики</h5>
						</div>
						<div class="col-3">
							<div class="float-sm-right">
								<button class="btn btn-default mb-1" data-bs-toggle="modal" data-bs-target="#createCharacteristicModal" type="submit">
									<i class="fa-solid fa-plus"></i>
								</button>
							</div>
						</div>
					</div>
					<div class="row">
						<table id="characteristic" class="table table-bordered align-middle table-hover" style="width:100%">
							<thead class="table">
								<tr>
									<td>Показатель</td>
									<td>Ед. измерения</td>
									<td>Значение</td>
									<td></td>
								</tr>
							</thead>
							<tbody>
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

@await Html.PartialAsync("InfoModal/_AddCharacteristicModal.cshtml")
@await Html.PartialAsync("InfoModal/_AddCompletedWorkModal.cshtml")
@await Html.PartialAsync("InfoModal/_AddConservationModal.cshtml")
@await Html.PartialAsync("InfoModal/_AddDescriptionModal.cshtml")
@await Html.PartialAsync("InfoModal/_AddDisposalInformationModal.cshtml")
@await Html.PartialAsync("InfoModal/_AddReceptionAndTransmissionModal.cshtml")
@await Html.PartialAsync("InfoModal/_AddRepairModal.cshtml")
@await Html.PartialAsync("InfoModal/_AddStorageModal.cshtml")
@await Html.PartialAsync("InfoModal/_EditAdditionalModal.cshtml")
@await Html.PartialAsync("InfoModal/_EditBasicModal.cshtml")
@await Html.PartialAsync("InfoModal/_EditDescriptionModal.cshtml")

@section Scripts {
	<script src="~/views/technicalEquipment/info.js"></script>
	<script src="~/views/technicalEquipment/info/characteristics.js"></script>
	<script src="~/views/technicalEquipment/info/completedWork.js"></script>
	<script src="~/views/technicalEquipment/info/conservation.js"></script>
	<script src="~/views/technicalEquipment/info/disposalInformation.js"></script>
	<script src="~/views/technicalEquipment/info/receptionAndTransmission.js"></script>
	<script src="~/views/technicalEquipment/info/repair.js"></script>
	<script src="~/views/technicalEquipment/info/storage.js"></script>
}