@using AccountingTM.ViewModels.TechnicalEquipment
@model InfoViewModel

@*1 Изменение основной информации *@
<div class="modal fade" tabindex="-1" id="editInfo1">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Редактирование информации о техническом средстве</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">

				<div class="mb-1">
					<label class="form-label" for="floatingInput">Наименование типа</label>
					<select id="typeEquipment"></select>
				</div>

				<div class="mb-1">
					<label class="form-label" for="floatingInput">Наименование бренда</label>
					<select id="brand"></select>
				</div>

				<div class="mb-1">
					<label class="form-label" for="floatingInput">Наименование модели</label>
					<input type="text" class="form-control" id="model" name="model" placeholder="Наименование модели" />
				</div>

				<div class="mb-1">
					<label class="form-label" for="floatingInput">Выберите состояние</label>
					<select id="state" class="form-select mb-1" aria-label="Пример выбора по умолчанию">
						<option value="0">
							Исправно
						</option>
						<option value="1">
							Неисправно
						</option>
						<option value="2">
							Работоспособно
						</option>
						<option value="3">
							Неработоспособно
						</option>
					</select>
				</div>

			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
				<button id="create-btn" class="btn btn-primary">Добавить</button>
			</div>
		</div>
	</div>
</div>

@*2 Изменение основной информации *@
<div class="modal fade" tabindex="-1" id="editInfo2">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Редактирование информации о техническом средстве</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<div class="mb-1">
					<label for="floatingInput">Серийный номер</label>
					<input value="@Model.SerialNumber" type="text" class="form-control" id="serialNumber" name="serialNumber" placeholder="Серийный номер" />
				</div>

				<div class="mb-1">
					<label for="floatingInput">Инвентарный номер</label>
					<input value="@Model.InventoryNumber" type="text" class="form-control" id="inventoryNumber" name="inventoryNumber" placeholder="Инвентарный номер" />
				</div>

				<div class="mb-1">
					<label for="floatingInput">Ответственный</label>
					<select id="employee">
						@if(Model.Employee != null)
						{
							<option value="@Model.Employee.Id" selected>
								@Model.Employee.FullName
							</option>
						}
					</select>
				</div>

				<div class="mb-1">
					<label for="floatingInput">Местоположение</label>
					<select id="location">
						@if (Model.Location != null)
						{
							<option value="@Model.Location.Id" selected>
								@Model.Location.Name
							</option>
						}
					</select>
				</div>
				@* <input type="text" class="form-control" id="date" name="date" placeholder="Дата изготовления" /> *@
				<div class="mb-1">
					<label for="floatingInput">Дата изготовления</label>
					<input value="@Model.Date" type="text" id="date" class="form-control" name="date" placeholder="Дата изготовления" @* value="@Model.Date.ToString("dd.MM.yyyy")" *@>
				</div>

				<div class="mb-1">
					<label for="floatingInput">Дата ввода в эксплуатацию</label>
					<input value="@Model.DateStart" type="text" class="form-control" id="dateStart" name="dateStart" placeholder="Дата ввода в эксплуатацию" />
				</div>

				<div class="mb-1">
					<label for="floatingInput">Средний срок работы</label>
					<input value="@Model.DateEnd" type="text" class="form-control" id="dateEnd" name="dateEnd" placeholder="Средний срок работы" />
				</div>

				<div class="mb-1">
					<label for="floatingInput">Гарантийный срок работы</label>
					<input value="@Model.DateGarant" type="text" class="form-control" id="dateGarant" name="dateGarant" placeholder="Гарантийный срок работы" />
				</div>

			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
				<button id="create-btn" class="btn btn-primary">Добавить</button>
			</div>
		</div>
	</div>
</div>