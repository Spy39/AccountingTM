@using Accounting.Models;
@model IEnumerable<TechnicalEquipment>

@{
    ViewData["Title"] = "TechnicalEquipment";
	Layout = "~/Views/Shared/Layout/_Layout.cshtml";
}


@section LeftNavbar {
	<ol class="breadcrumb float-sm-right m-0 bg-white">
		<li class="breadcrumb-item"><a href="#">Home</a></li>
		<li class="breadcrumb-item active">TechnicalEquipment</li>
	</ol>
}
<section class="content-header">
	<div class="container-fluid">
		<div class="row mb-2">
			<div class="col-sm-6">
				<h1>Учет технических средств</h1>
			</div>
		</div>
	</div>
</section>

<div class="shadow-sm p-3 mb-1 bg-body-tertiary rounded">
	<div class="row">
		<div class="col-6">
			<!-- SEARCH FORM -->
			<form class="form-inline">
				<div class="input-group input-group-sm">
					@*<input class="form-control form-control-navbar" type="search" placeholder="Search" aria-label="Search">*@
					<input type="search" class="form-control form-control-sm" placeholder="Поиск" aria-controls="example1">
					<div class="input-group-append">
						<button class="btn btn-navbar" type="submit">
							<i class="fas fa-search"></i>
						</button>
					</div>
				</div>
			</form>
		</div>

		<div class="col-6">
			<div class="float-sm-right">
				<button class="btn btn-default" data-bs-toggle="modal" data-bs-target="#create" type="submit">
					<i class="fa-solid fa-plus"></i>
				</button>
				<button type="button" class="btn btn-default">
					<i class="fa-solid fa-download"></i>
				</button>
				<button type="button" class="btn btn-default">
					<i class="fa-solid fa-print"></i>
				</button>
			</div>
		</div>
	</div>
</div>

<table id="technicalEquipmentTable" class="table table-striped table-hover" style="width:100%">
	<thead>
	<tr>
		<th>Тип</th>
		<th>Бренд</th>
		<th>Модель</th>
		<th>Серийный номер</th>
		<th>Состояние</th>
		<th>Ответственный</th>
		<th>Местоположение</th>
		<th>Место для кнопок</th>
	</tr>
	</thead>

	<tbody>
	</tbody>
</table>

<div class="modal fade" tabindex="-1" id="create">
	<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title">Добавление технического средства</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">

					<div class="form-floating mb-2">
						<select id="typeEquipment"></select>
						<label for="floatingInput">Наименование типа</label>
					</div>

					<div class="form-floating mb-2">
						<select id="brand"></select>
						<label for="floatingInput">Наименование бренда</label>
					</div>

					<div class="form-floating mb-2">
						<input type="text"
								class="form-control"
						        id="model"
								name="model"
							   placeholder="Наименование модели" />
						<label for="floatingInput">Наименование модели</label>
					</div>

					<div class="form-floating  mb-2">
						<input type="text"
								class="form-control"
								id="serialNumber"
								name="serialNumber"
							   placeholder="Серийный номер" />
						<label for="floatingInput">Серийный номер</label>
					</div>

					<div class="form-floating  mb-2">
						<input type="text"
							   class="form-control"
							   id="inventoryNumber"
							   name="inventoryNumber"
							   placeholder="Инвентарный номер" />
						<label for="floatingInput">Инвентарный номер</label>
					</div>

					<select class="form-select mb-2" aria-label="Пример выбора по умолчанию">
						<option selected>Выберите состояние</option>
						<option value="0">
							Исправно
						</option>
						<option value="1">
							Неисправно
						</option>
						<option value="2">
							Работоспособно
						</option>
						<option value="3">
							Неработоспособно
						</option>
					</select>

					<div class="form-floating  mb-2">
						<select id="employee"></select>
						<label for="floatingInput">Ответственный</label>
					</div>

					<div class="form-floating  mb-2">
					<select id="location"></select>
						<label for="floatingInput">Местоположение</label>
					</div>

				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
					<button id="create-btn" class="btn btn-primary">Добавить</button>
				</div>
			</div>
	</div>
</div>

@section Scripts {
	<script src="~/views/technicalEquipment/index.js"></script>
}