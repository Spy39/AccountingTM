@using AccountingTM.Models
@model IEnumerable<TechnicalEquipment>

@{
    ViewData["Title"] = "TechnicalEquipment";
	Layout = "~/Views/Shared/Layout/_Layout.cshtml";
}

@section LeftNavbar {
	<ol class="breadcrumb float-sm-right m-0 bg-white">
		<li class="breadcrumb-item"><a asp-area="" asp-controller="TechnicalEquipment" asp-action="Index">Home</a></li>
		<li class="breadcrumb-item active">TechnicalEquipment</li>
	</ol>
}
<section class="content-header">
	<div class="container-fluid">
		<div class="row mb-2">
			<div class="col-sm-6">
				<h1>Учет технических средств</h1>
			</div>
		</div>
	</div>
</section>

<div class="shadow-sm p-3 mb-1 bg-body-tertiary rounded">
    <div class="row align-items-center">
        <!-- Поле поиска -->
        <div class="col-md-3">
            <div class="input-group">
                <input id="search-input" type="search" class="form-control" placeholder="Поиск" aria-label="Поиск" aria-describedby="button-addon2">
                <button class="btn btn-outline-secondary" type="submit" id="search-btn">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </div>

        <!-- Кнопки действий -->
        <div class="col-md-9 d-flex justify-content-md-end justify-content-start gap-2 flex-wrap">
            <button class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#create" type="submit">
                <i class="fa-solid fa-plus"></i> Добавить
            </button>
            <button class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#upload" type="submit">
                <i class="fa-solid fa-file-arrow-up"></i> Загрузить
            </button>
            <button id="exportExcelBtn" class="btn btn-outline-secondary">
                <i class="fa-solid fa-file-excel"></i> Excel
            </button>
            <button id="printTableBtn" class="btn btn-outline-secondary">
                <i class="fa-solid fa-print"></i> Печать
            </button>
            <a asp-area="" asp-controller="Archive" asp-action="Index" class="btn btn-outline-secondary">
                <i class="fa-solid fa-box-archive"></i> Архив
            </a>
        </div>
    </div>
</div>




<table id="technicalEquipmentTable" class="table table-striped table-hover" style="width:100%">
	<thead>
	<tr>
		<th>Тип</th>
		<th>Бренд</th>
		<th>Модель</th>
		<th>Серийный номер</th>
		<th>Состояние</th>
		<th>Ответственный</th>
		<th>Местоположение</th>
		<th></th>
	</tr>
	</thead>

	<tbody>
	</tbody>
</table>

@await Html.PartialAsync("_AddIndexModal.cshtml")
@await Html.PartialAsync("_UploadModal.cshtml")

@section Scripts {
	<script src="~/views/technicalEquipment/index.js" asp-append-version="true"></script>
}