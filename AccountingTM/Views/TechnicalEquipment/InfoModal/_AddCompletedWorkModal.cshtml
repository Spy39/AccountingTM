@using AccountingTM.ViewModels.TechnicalEquipment
@model InfoViewModel

@* Учет выполненных работ *@
<div class="modal fade" tabindex="-1" id="addCompletedWorkModal">
	<div class="modal-dialog modal-lg">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Добавление данных о проведенных работах</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">

				<div class="mb-1">
					<label for="floatingInput">Дата</label>
					<input type="text" id="dateCompletedWork" class="form-control" name="dateCompletedWork" placeholder="Дата" />
				</div>

				<div class="mb-1">
					<label class="form-label" for="floatingInput">Категория</label>
					<select id="category"></select>
				</div>

				<div class="mb-1">
					<label for="exampleFormControlInput1" class="form-label">Тема</label>
					<input type="text" class="form-control" id="subject" placeholder="Тема заявки...">
				</div>
				<div class="mb-1">
					<label for="exampleFormControlTextarea1" class="form-label">Описание неисправности</label>
					<textarea class="form-control" id="description" rows="3"></textarea>
				</div>
				<div class="mb-1">
					<label for="exampleFormControlInput1" class="form-label">Автор</label>
					<input type="text" class="form-control" id="author" placeholder="Иванов И.П.">
				</div>
				<div class="mb-1">
					<label class="form-label" for="floatingInput">Местоположение</label>
					<select id="location"></select>
				</div>

				<div class="mb-1">
					<label class="form-label" for="floatingInput">Выберите статус заявки</label>
					<select id="priority" class="form-select mb-1" aria-label="Пример выбора по умолчанию">
						<option value="0">
							Новая
						</option>
						<option value="1">
							В работе
						</option>
						<option value="2">
							Приостановлена
						</option>
						<option value="3">
							Передана
						</option>
						<option value="4">
							Решена
						</option>
					</select>
				</div>

				</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
				<button id="createCompletedWorkBtn" class="btn btn-primary">Добавить</button>
			</div>

		</div>
	</div>
</div>